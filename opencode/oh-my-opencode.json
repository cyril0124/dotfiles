{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",

  "google_auth": false,

  "claude_code": {
    "mcp": false,
    "commands": false,
    "skills": false,
    "agents": false,
    "hooks": false
  },

  "disabled_mcps": [
    "websearch_exa"
  ],

  "sisyphus_agent": {
    "disabled": true
  },

  "agents": {
    "Sisyphus": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "Prometheus (Planner)": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "orchestrator-sisyphus": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "librarian": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "explore": {
      "model": "cliproxy/grok-code-fast-1"
    },
    "oracle": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "frontend-ui-ux-engineer": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "document-writer": {
      "model": "nvidia/z-ai/glm4.7"
    },
    "multimodal-looker": {
      "model": "nvidia/z-ai/glm4.7"
    }
  },

  "experimental": {
    "auto_resume": true,
    "truncate_all_tool_outputs": true,
    "preemptive_compaction_threshold": 0.8
  }
}
